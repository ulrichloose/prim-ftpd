<?xml version="1.0" encoding="utf-8"?>

<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:shortcutId="RunSettings"
        android:enabled="true"
        android:icon="@mipmap/ic_set"
        android:shortcutShortLabel="@string/prefs"
        android:shortcutLongLabel="@string/prefs">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="org.primftpd"
            android:targetClass="org.primftpd.prefs.FtpPrefsActivityThemeDark" />
    </shortcut>

    <shortcut
        android:shortcutId="StartServer"
        android:enabled="true"
        android:icon="@mipmap/ic_start"
        android:shortcutShortLabel="@string/startService"
        android:shortcutLongLabel="@string/startService">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="org.primftpd"
            android:targetClass="org.primftpd.ui.StartServerAndExitActivity" />
    </shortcut>

    <shortcut
        android:shortcutId="StopServer"
        android:enabled="true"
        android:icon="@mipmap/ic_stop"
        android:shortcutShortLabel="@string/stopService"
        android:shortcutLongLabel="@string/stopService">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="org.primftpd"
            android:targetClass="org.primftpd.ui.StopServerAndExitActivity" />
    </shortcut>
</shortcuts>
